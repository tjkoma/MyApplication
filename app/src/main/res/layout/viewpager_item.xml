<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/category_viewPager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/category_first_view"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/viewpager_selected_indicator" />

        <View
            android:id="@+id/category_second_view"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/viewpager_unselected_indicator" />
    </LinearLayout>
</LinearLayout>